using System;

namespace calculator
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("I'm a simple claculator that can solve a problem involving two numbers and an arithmetic operation.");
            Console.WriteLine("Put the first number you'd like for the problem.");

            double firstnum = Console.ReadLine();

            Console.WriteLine("Now put in the arithmetic operation you'd like to use. Write add, minus, times, or divide, and write it in lowercase.");

            String operation = Console.ReadLine();

            Console.WriteLine("Now Put the second number.");

            double secondnum = Console.ReadLine();

            if (operation = add)
            {
                double answer = firstnum + secondnum 
            }

            else if (operation = minus)
            {
                double answer = firstnum - secondnum 
            }

            else if (operation = times)
            {
                double answer = firstnum * secondnum 
            }

            else if (operation = divide)
            {
                double answer = firstnum / secondnum 
            }

            Console.WriteLine("The answer to your problem is " + answer);

        }
    }
}
